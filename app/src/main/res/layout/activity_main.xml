<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1F5FE"
    android:orientation="vertical"
    tools:context="com.application.kushal.othello.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/image_black"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:contentDescription="@string/descriptions"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/blackCount"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="-2dp"
            android:layout_weight="1"
            android:background="@android:color/black"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/image_white"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:contentDescription="@string/descriptions"
            android:scaleType="fitCenter" />

        <Button
            android:id="@+id/whiteCount"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:textColor="@color/colorAccent"
            android:textSize="25dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:indeterminate="true"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>
